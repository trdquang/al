@page "/counter"
@inherits  Fluxor.Blazor.Web.Components.FluxorComponent

@namespace FluxorSort.Features.Counter

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @CounterState!.Value.Count</p>

<button class="btn btn-primary" @onclick="() => IncrementCount(1)">Up</button>
<button class="btn btn-primary" @onclick="() => IncrementCount(-1)">Down</button>
